{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "linter": {
        "rules": {
            "recommended": true
        }
    },
    "files": {
        "include": ["**/*.ts", "**/*.tsx"]
    },
    "formatter": {
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "asNeeded",
            "attributePosition": "auto"
        }
    }
}
